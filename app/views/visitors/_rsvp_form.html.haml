= simple_form_for @rsvp, url: rsvp_path, html: {id: 'js-form', class: 'rsvp-form custom', "data-abide" => ""}, remote: true do |f|
  -# %form#js-form.rsvp-form.custom{action: "#", "data-abide" => "", method: "POST"}
  %fieldset.rsvp-details
    / Displays a global alert if required fields are missing
    = f.error_notification
    .js-display
    %legend
      Kindly respond by
      = succeed "." do
        %strong April 30, 2014
    .row
      .large-6.columns
        = f.label :first_name, html_options: {for: "firstname"}
        %input#firstname.input-field{name: "firstname", placeholder: "Your first name is required", required: "", type: "text", value: ""}/
        %small.error First Name is required.
      .large-6.columns
        = f.label :last_name, text: 'Last Name', html_options: {for: "lastname"}
        %input#lastname.input-field{name: "lastname", placeholder: "Your last name is required", required: "", type: "text", value: ""}/
        %small.error Last Name is required.
    .row
      .large-6.columns
        = f.label :email, html_options: {for: "email"}
        %input#email.input-field{name: "email", placeholder: "name@yourdomain.com", required: "", type: "email", value: ""}/
        %small.error Valid Email is required.
      .large-6.columns
        = f.label :phone, html_options: {for: "phone"}
        %input#phone.input-field{name: "phone", placeholder: "A phone number is optional", type: "tel", value: ""}/
    .row
      .large-6.columns
        = f.label :street_address, html_options: {for: "street_address"} 
        %input#street_address.input-field{name: "street_address", placeholder: "Your street address", required: "", type: "text", value: ""}/
        %small.error Your street address is required.
      .large-6.columns
        = f.label :city, html_options: {for: "city"} 
        %input#city.input-field{name: "city", placeholder: "Choose a city", type: "text", value: ""}/
    .row
      .large-6.columns
        = f.label :state_region, html_options: {for: "state_region"}
        %input#state_region.input-field{name: "state_region", placeholder: "Your State or region", required: "", type: "text", value: ""}/
        %small.error Your state or region is required.
      .large-6.columns
        = f.label :country, html_options:{for: "country"}
        %input#country.input-field{name: "country", placeholder: "Choose a country", type: "text", value: ""}/
    .row
      .large-6.columns  
        = f.label :postal_code, html_options:{for: "postal_code"} 
        %input#postal_code.input-field{name: "postal_code", placeholder: "Your postal code", required: "", type: "text", value: ""}/
        %small.error Your postal code is required.
      .large-6.columns
        = f.label :birthday, html_options:{for: "birthday"}
        %input#birthday.input-field{name: "birthday", placeholder: "Enter your birthday", type: "date", value: ""}/
        
  %fieldset.rsvp-attendance
    %legend Will you be attending?
    .large-6.columns
      -# # = f.label :first_name, html_options: {for: "firstname"}
      %label{for: "radio1"}
        %input#radio1{name: "radio", required: "", style: "display:none;", type: "radio", value: "Accepts with Pleasure!"}/
        %span.custom.radio.accept
        %span.radio-label Accepts with Pleasure!
    .large-6.columns
      -# # = f.label :first_name, html_options: {for: "firstname"}
      %label{for: "radio2"}
        %input#radio2{name: "radio", required: "", style: "display:none;", type: "radio", value: "Declines with Regret."}/
        %span.custom.radio.decline
        %span.radio-label Declines with Regret.
  %fieldset.rsvp-meal-choice
    %legend
      Please select your meal choices
    .row
      .large-6.columns
        = f.label :first_name, html_options: {for: "firstname"}
        %label{for: "main-course"} Main
        %select#main-course{name: "main-course"}
          %option{selected: "selected"} None
          %option Chicken
          %option Beef
          %option Vegetarian
      .large-6.columns
        = f.label :first_name, html_options: {for: "firstname"}
        %label{for: "dessert"} Dessert
        %select#dessert{name: "dessert"}
          %option{selected: "selected"} None
          %option Chocolate Cake
          %option Lemon Cheesecake
          %option Key Lime Pie
  %button#js-submit-btn.button.radius{type: "submit"}
    %i.fa.fa-envelope
    %span.btn-label Send
